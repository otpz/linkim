<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <%- include('./partials/head'); %>
    <title>Linkim | Keşfet</title>
</head>
<body class="w-full  bg-body flex flex-col items-center">

    <%- include('./partials/navbar'); %>

    <main class="w-125 flex flex-col items-center p-4 m-auto">

        <div class="w-full my-5">
            <h1 class="text-2xl font-bold tracking-tight mb-5">En Popüler Kullanıcılar</h1>
            <ul class="w-full h-24 flex items-center rounded-lg bg-gray-800">
                <% for(let i = 0; i < 6; i++) { %>
                    <% if (populars[i]) { %>
                    <a id="popular" href="@<%= populars[i].UserName%>" class="<%=  %>">
                        <li class="w-[78px] h-24 rounded-md flex flex-col items-center justify-evenly relative">
                            <span class="truncate hidden absolute top-[-18px] bg-gray-900 rounded-md text-gray-300 text-xxs p-1 transition-all duration-700 max-w-18"><%= populars[i].Name %> <%= populars[i].Surname %></span>
                            <img class="w-12 h-12 rounded-full" src="/public/assets/img/avatar.png" alt="">
                            <span class="mt-[-1px] text-xs text-gray-400 truncate"> @<%=populars[i].UserName%> </span>
                        </li>
                    </a>
                    <% } %>
                <% } %>
            </ul>
        </div>

        <div id="questions" class="questions">
            <h1 class="text-2xl font-bold tracking-tight">Keşfet</h1>
            <% if (questions.length > 0) { %>
                    <% for (let i = 0; i < questions.length; i++) { %>
                        <div id="<%= questions.Id %>" class="question-main">
                            <div class="top">
                                <div class="q-user-info">
                                    <% if (questions[i].QuestionerId) { %>
                                        <img class="avatar" src="/public/assets/img/avatar.png" alt="">
                                    <% } else { %>
                                        <div class="avatar grid place-items-center border-dashed border-1 text-white"> ? </div>
                                    <% } %>
                                    <div class="info"> 
                                        <% if (questions[i].QuestionerId) { %>
                                            <a href="/@<%=questions[i].QuestionerUserName%>" class="name max-w-90 truncate"><%= questions[i].QuestionerName %> <%= questions[i].QuestionerSurname %></a>
                                        <% } else { %>
                                            <span class="name">Anonim</span>
                                        <% } %>
                                        <% if (questions[i].QuestionerId) { %>
                                            <a href="/@<%=questions[i].QuestionerUserName%>" class="username max-w-90 truncate">@<%= questions[i].QuestionerUserName %></a>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="user-text text-white">
                                    <p><%= questions[i].Question %></p>
                                </div>
                            </div>
                            <div class="bottom">
                                <div class="q-user-info">
                                    <img class="avatar" src="/public/assets/img/avatar.png" alt="">
                                    <div class="info">
                                        <a href="/@<%= questions[i].UserUserName %>" class="name max-w-90 truncate"><%= questions[i].UserName %> <%= questions[i].UserSurname %></a>
                                        <a href="/@<%= questions[i].UserUserName %>" class="username max-w-90 truncate">@<%= questions[i].UserUserName %></a>
                                    </div>
                                </div>
                                <div class="user-text text-white">
                                    <p><%= questions[i].Answer %></p>
                                </div>
                                <div class="question-stats">
                                    <button id="<%= questions[i].Id %>" class="likes <%= questions[i].LikeInfo ? 'liked' : 'unliked' %>" onclick="likeControl(event)">
                                        <svg class="w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"/></svg>
                                        <span><span class="value"><%= questions[i].Likes %></span> beğeni</span>
                                    </button>
                                    <div class="time">
                                        <span><%= questions[i].TimeElapsed %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
            <% } %>
        </div>
    </main>

    <script type="text/javascript" src="/js/app.js"></script>
    <script type="text/javascript" src="/js/dom.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
</body>
</html>